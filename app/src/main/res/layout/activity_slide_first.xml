<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/ic_bagitronik_swipe_first"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:id="@+id/ivImage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="@dimen/spacing_large"
            android:src="@drawable/ic_bagitronik_text_logo">

    </ImageView>

    <LinearLayout
            android:id="@+id/lyt"
            android:layout_below="@+id/ivImage1"
            android:src="@drawable/ic_bagitronik_text_logo"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" android:layout_marginBottom="@dimen/spacing_xlarge"
            android:layout_marginLeft="@dimen/spacing_xlarge" android:layout_marginStart="@dimen/spacing_xlarge"
            android:layout_marginEnd="@dimen/spacing_xlarge" android:layout_marginRight="@dimen/spacing_xlarge">


        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp">


            <ImageView
                    android:id="@+id/img1"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_bagitronik_logo_swipe_first"
                    android:layout_width="220dp"
                    android:layout_height="258dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
            />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:layout_below="@+id/lyt"
            android:layout_marginTop="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView

            android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="10dp"
                android:text="@string/slide1_title"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:layout_marginBottom="32dp"
        />

    </LinearLayout>



</RelativeLayout>