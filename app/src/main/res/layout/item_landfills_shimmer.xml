<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="4dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLandfillsShimmerData"
        android:layout_width="190dp"
        android:layout_height="match_parent"
        android:background="@color/placeholder_bg" />

    <TextView
        android:id="@+id/tvLandFillsShimmerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:layout_toRightOf="@id/ivLandfillsData"
        android:background="@color/placeholder_bg" />

    <TextView
        android:id="@+id/tvLandFillsShimmerCity"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLandFillsShimmerName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:layout_toRightOf="@id/ivLandfillsData"
        android:background="@color/placeholder_bg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLandFillsShimmerCity"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:layout_toRightOf="@id/ivLandfillsShimmerData"
        android:background="@color/placeholder_bg" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_lihatsemua" />


</RelativeLayout>