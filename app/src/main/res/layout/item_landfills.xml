<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLandfillsData"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/tvLandFillsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@id/ivLandfillsData"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="TPS serba bersih" />

        <TextView
            android:id="@+id/tvLandFillsCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLandFillsName"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@id/ivLandfillsData"
            android:fontFamily="@font/lato"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Yogyakarta" />

        <TextView
            android:id="@+id/tvLandFillsAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLandFillsCity"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@id/ivLandfillsData"
            android:fontFamily="@font/lato"
            tools:text="Pogung Lor. Jl Kaliurang" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_lihatsemua" />


    </RelativeLayout>
</android.support.v7.widget.CardView>