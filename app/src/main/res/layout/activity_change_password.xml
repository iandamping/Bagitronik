<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:id="@+id/ivImage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_xlarge"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_bagitronik_splash" />

    <TextView
            android:id="@+id/tvText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivImage1"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/spacing_xlarge"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/lato"
            android:text="Ubah Kata Sandi."
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="26sp"/>

    <TextView
            android:id="@+id/tvText2"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvText1"
            android:textColor="@color/colorTitle"
            android:layout_marginStart="@dimen/spacing_xlarge"
            android:layout_marginEnd="75dp"
            android:textSize="14sp"
            android:text="Ubah kata sandi lama anda dengan yang baru."/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_below="@id/tvText2"
            android:layout_marginLeft="@dimen/spacing_xlarge"
            android:layout_marginRight="@dimen/spacing_xlarge"
            android:fontFamily="@font/lato"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/lato"
                android:text="Masukkan Password lama anda."
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="18sp"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTitle"
                android:textColorHint="@color/colorTitle"
                android:layout_marginTop="8dp"
                app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/foredittextloginregister"
                    android:fontFamily="@font/lato"
                    android:inputType="textPassword"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/colorTitle" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/lato"
                android:text="Masukkan Password yang baru."
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="18sp"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTitle"
                android:textColorHint="@color/colorTitle"
                app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                    android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/foredittextloginregister"
                    android:fontFamily="@font/lato"
                    android:inputType="textPassword"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/colorTitle" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/lato"
                android:text="Minimal 6 karakter, kombinasi huruf dan angka."
                android:textColor="#000000"/>
        <Button
            android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/forbuttonloginregister"
                android:fontFamily="@font/lato"
                android:text="UBAH"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>