<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvPilihBarangmu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Pilih Barangmu"
        android:fontFamily="@font/lato"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25dp"
        tools:layout_conversion_absoluteHeight="34dp"
        tools:layout_conversion_absoluteWidth="171dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="183dp" />

    <TextView
        android:id="@+id/tvPilihBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPilihBarangmu"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Pilih Barang"
        android:fontFamily="@font/lato"
        android:textColor="#000000"
        android:textStyle="normal"
        android:textSize="16dp"
        tools:layout_conversion_absoluteHeight="19dp"
        tools:layout_conversion_absoluteWidth="76dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="227dp" />

    <Spinner

        android:id="@+id/spPermintaanTukar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/spinner_bg"
        android:layout_below="@+id/tvPilihBarang"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"/>

    <ImageView
            android:visibility="gone"
        android:layout_width="33dp"
        android:layout_height="31dp"
        android:layout_alignTop="@+id/spPermintaanTukar"
        android:layout_gravity="right"
        android:layout_marginStart="-57dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="9dp"
        android:layout_toEndOf="@+id/spPermintaanTukar"
        android:layout_weight="1"
        android:src="@drawable/dropdown" />

    <TextView
        android:id="@+id/tvCatatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spPermintaanTukar"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="Catatan :"
        android:fontFamily="@font/lato"
        android:textColor="#000000"
        android:textStyle="normal"
        android:textSize="16dp"
        tools:layout_conversion_absoluteHeight="19dp"
        tools:layout_conversion_absoluteWidth="76dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="227dp" />

    <EditText
        android:id="@+id/etCatatanPermintaanTukar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@+id/tvCatatan"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/textview_bg"


        />

    <TextView
            android:id="@+id/btnKirimPermintaanTukar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="KIRIM"
            android:textColor="#1554A1"
            android:fontFamily="@font/lato"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/etCatatanPermintaanTukar"
    />

</RelativeLayout>